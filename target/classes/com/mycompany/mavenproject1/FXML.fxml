<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <!-- Buttons on the left side -->
    <Button mnemonicParsing="false" text="Load" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button mnemonicParsing="false" text="Save" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button mnemonicParsing="false" text="Display" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button mnemonicParsing="false" text="Play" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button mnemonicParsing="false" text="Exit" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <!-- Result TextArea on the right side with padding -->
    <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="5" />
</GridPane>
